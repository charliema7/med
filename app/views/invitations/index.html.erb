<h1>Invitations</h1>
<%= link_to 'Invite User', new_user_invitation_path %>

<h2>Pending Users (<%= @pending_users.count%>)</h2>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Updated At</th>
      <th>Created At</th>
      <th>Invited By</th>
      <th>Invitation Created At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pending_users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.updated_at %></td>
        <td><%= user.created_at %></td>
        <td><%= user.invited_by.email %></td>
        <td><%= user.invitation_created_at %></td>
        <td><%= link_to 'Resend Invite', resend_invitation_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Accepted Users (<%= @accepted_users.count%>)</h2>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Updated At</th>
      <th>Created At</th>
      <th>Invited By</th>
      <th>Invitation Accepted At</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accepted_users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.updated_at %></td>
        <td><%= user.created_at %></td>
        <td><%= user.invited_by.email %></td>
        <td><%= user.invitation_accepted_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>